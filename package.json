{
  "name": "@map-colonies/ts-npm-package-boilerplate",
  "version": "1.1.0",
  "description": "This is template for map colonies typescript packages",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "prepare": "husky",
    "check-dist": "publint && attw --pack ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/ts-npm-package-boilerplate.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/ts-npm-package-boilerplate/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/ts-npm-package-boilerplate#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@commitlint/cli": "^20.4.1",
    "@map-colonies/commitlint-config": "^2.0.0",
    "@map-colonies/eslint-config": "^8.0.0",
    "@map-colonies/prettier-config": "^1.0.0",
    "@map-colonies/tsconfig": "^2.0.0",
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/eslint-plugin": "^1.6.9",
    "@vitest/ui": "^4.0.18",
    "commitlint": "^20.4.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "publint": "^0.3.17",
    "rimraf": "^6.1.3",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
